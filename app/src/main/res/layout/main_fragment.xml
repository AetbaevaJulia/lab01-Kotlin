<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#202020"
    android:orientation="vertical">


    <TextView
        android:id="@+id/previous_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="4"
        android:text="previous_input"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/input"
        android:layout_marginHorizontal="10dp"

        style="@style/Previous_input">
    </TextView>

    <TextView
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        android:text="input"
        app:layout_constraintTop_toBottomOf="@id/previous_input"
        app:layout_constraintBottom_toTopOf="@id/keyboard"
        android:layout_margin="10dp"

        style="@style/Input_text">
    </TextView>

    <GridLayout
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:rowCount="6"
        android:columnCount="5">
        <Button
            android:id="@+id/clear"
            android:text="C"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_margin="1dp"

            style="@style/Operation">
        </Button>
        <Button
            android:id="@+id/delete_last"
            android:text="âŒ«"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnSpan="3"
            android:layout_columnWeight="2"
            android:layout_margin="1dp"
            style="@style/Operation">
        </Button>

        <Button
            android:id="@+id/open_parenthensis"
            android:text="("
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="1dp"
            style="@style/Operation">
        </Button>
        <Button
            android:id="@+id/close_parenthensis"
            android:text=")"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="1dp"
            style="@style/Operation">
        </Button>
        <Button
            android:id="@+id/division"
            android:text="/"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="1dp"
            style="@style/Operation">
        </Button>
        <Button
            android:id="@+id/multiply"
            android:text="*"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_margin="1dp"
            style="@style/Operation">
        </Button>

        <Button
            android:id="@+id/num_7"
            android:text="7"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="1dp"
            style="@style/Number">
        </Button>
        <Button
            android:id="@+id/num_8"
            android:text="8"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="1dp"
            style="@style/Number">
        </Button>
        <Button
            android:id="@+id/num_9"
            android:text="9"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="1dp"
            style="@style/Number">
        </Button>
        <Button
            android:id="@+id/minus"
            android:text="-"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_margin="1dp"
            style="@style/Operation">
        </Button>

        <Button
            android:id="@+id/num_4"
            android:text="4"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_margin="1dp"
            style="@style/Number">
        </Button>
        <Button
            android:id="@+id/num_5"
            android:text="5"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_margin="1dp"
            style="@style/Number">
        </Button>
        <Button
            android:id="@+id/num_6"
            android:text="6"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_margin="1dp"
            style="@style/Number">
        </Button>

        <Button
            android:id="@+id/plus"
            style="@style/Operation"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_margin="1dp"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:text="+">
        </Button>

        <Button
            android:id="@+id/num_1"
            android:text="1"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_margin="1dp"
            style="@style/Number">
        </Button>
        <Button
            android:id="@+id/num_2"
            android:text="2"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_margin="1dp"
            style="@style/Number">
        </Button>
        <Button
            android:id="@+id/num_3"
            android:text="3"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_margin="1dp"
            style="@style/Number">
        </Button>
        <Button
            android:id="@+id/equal"
            android:text="="
            android:layout_row="4"
            android:layout_rowSpan="2"
            android:layout_rowWeight="2"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_column="3"
            android:layout_margin="1dp"
            style="@style/Equal">
        </Button>
        <Button
            android:id="@+id/num_0"
            android:text="0"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_margin="1dp"
            style="@style/Number">
        </Button>
        <Button
            android:id="@+id/comma"
            android:text=","
            android:layout_row="5"
            android:layout_column="2"
            android:layout_margin="1dp"
            style="@style/Number">
        </Button>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>