<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="button">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">26sp</item>
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="text">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:gravity">bottom</item>
    </style>

    <!-- Для цифр -->
    <style name="Number" parent="button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">#3B3B3B</item>
    </style>

    <!-- Для операций -->
    <style name="Operation" parent="button">
        <item name="android:textColor">#FF4FCB</item>
        <item name="backgroundTint">#323232</item>
    </style>

    <!-- Для "=" -->
    <style name="Equal" parent="button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">#FF4FCB</item>
    </style>

    <!-- Для ввода -->
    <style name="Input_text" parent="text">
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Для прошлого ввода -->
    <style name="Previous_input" parent="text">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#6B6B6B</item>
    </style>
</resources>